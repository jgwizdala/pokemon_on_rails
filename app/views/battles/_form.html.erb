<%= form_for(@battle) do |f| %>
  <% if @battle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@battle.errors.count, "error") %> prohibited this battle from being saved:</h2>

      <ul>
      <% @battle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :trainer_id %><br />
    <%= f.collection_select :trainer_id, 
          Trainer.all, :id, :name, :prompt => 'Select trainer' 
    %>
  </div>
  
  <div class="field">
    <%= f.label :enemy_id %><br />
    <%= f.collection_select :enemy_id, 
          Trainer.all, :id, :name, :prompt => 'Select trainer' 
    %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
